<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="au.edu.rmit.mckerrow.sofia.mad_assignment_2">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".view.DisplayTrackablesListActivity" />
        <activity
            android:name=".view.DisplayTrackableRouteInfoActivity"
            android:parentActivityName=".view.DisplayTrackablesListActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".view.DisplayTrackablesListActivity" />
        </activity>
        <activity android:name=".view.DisplayTrackingsListActivity" />
        <activity
            android:name=".view.TabWidgetActivity"
            android:theme="@style/TabWidgetTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".view.AddTrackingActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".view.DisplayTrackingsListActivity" />
        </activity>
        <activity android:name=".view.EditTrackingActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".view.DisplayTrackingsListActivity" />
        </activity>
    </application>

</manifest>